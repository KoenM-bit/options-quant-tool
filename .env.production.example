# Environment: PRODUCTION (Synology)
# Copy this to .env on Synology

# Airflow
AIRFLOW_UID=1000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__DAGS_FOLDER=/opt/airflow/dags
AIRFLOW__CORE__FERNET_KEY=your_production_fernet_key_here

# Database
POSTGRES_USER=airflow
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=ahold_options
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Scraper settings
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; AholdOptionsBot/1.0)
SCRAPER_DELAY=2
SCRAPER_TIMEOUT=30

# Data paths (Synology volumes)
DATA_DIR=/volume1/docker/ahold-options/data
PARQUET_DIR=/volume1/docker/ahold-options/data/parquet
LOGS_DIR=/volume1/docker/ahold-options/logs

# Power BI refresh
# Synology will export parquet files to this network share
POWERBI_SHARE=/volume1/powerbi/ahold-options

# Monitoring
LOG_LEVEL=INFO
ENABLE_MONITORING=true

# Timezone
TZ=Europe/Amsterdam

# Backup
BACKUP_DIR=/volume1/backups/ahold-options
BACKUP_RETENTION_DAYS=30
